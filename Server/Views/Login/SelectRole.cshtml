@model List<string>

@{
    ViewData["Title"] = "Choose Role";
}

<h2>Choose Your Role</h2>

<form asp-action="SelectRole" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <input type="radio" id="role_@i" name="selectedRole" value="@Model[i]" required />
            <label for="role_@i">@Model[i]</label>
        </div>
    }
    <button type="submit">Continue</button>
</form>